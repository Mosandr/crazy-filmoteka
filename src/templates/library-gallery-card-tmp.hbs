{{#each this}}<li class="gallery__item modal-trigger" data-target="modal-card" data-id="{{id}}">
    <div class="gallery__img-container" data-id="{{id}}">
        <img class="gallery__img" src="https://image.tmdb.org/t/p/w500{{ poster_path}}" alt="{{title}} movie poster">
    </div>
    <h3 class="gallery__movie-title">{{title}}</h3>
    <p class="gallery__movie-genre"><span class="card-genres">{{#each genres}}{{name}} {{/each}}</span> |
        <span class="year-of-release">{{release_date}}</span> <span
            class="gallery__movie-rating">{{vote_average}}</span>
    </p>
</li>
{{/each}}